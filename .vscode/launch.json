{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js Debug",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "runtimeArgs": ["--inspect"],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "env": {
        "NEXT_DEBUG": "true"
      },
      "sourceMaps": true,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
